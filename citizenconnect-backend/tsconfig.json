{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*","prisma/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
