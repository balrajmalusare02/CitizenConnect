generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Complaint {
  id             Int             @id @default(autoincrement())
  title          String
  description    String
  domain         String
  category       String
  department     String?
  mediaUrl       String?
  location       String?
  latitude       Float?
  longitude      Float?
  ward           String?
  zone           String?
  district       String?
  status         ComplaintStatus @default(Raised)
  assignedToId   Int?
  assignedAt     DateTime?
  assignedById   Int?
  userId         Int
  acknowledgedAt DateTime?
  inProgressAt   DateTime?
  resolvedAt     DateTime?
  closedAt       DateTime?
  createdAt      DateTime        @default(now())
  assignedBy     User?           @relation("AssignedByUser", fields: [assignedById], references: [id])
  assignedTo     User?           @relation("AssignedComplaints", fields: [assignedToId], references: [id])
  user           User            @relation("CreatedComplaints", fields: [userId], references: [id])
  feedbacks      Feedback?
  notifications  Notification[]
  statusUpdates  StatusUpdate[]

  @@index([latitude, longitude])
  @@index([ward])
  @@index([zone])
  @@index([district])
}

model StatusUpdate {
  id                        Int       @id @default(autoincrement())
  status                    String
  remarks                   String?
  updatedById               Int?
  timeSpentInPreviousStatus Int?
  updatedAt                 DateTime  @default(now())
  complaintId               Int
  complaint                 Complaint @relation(fields: [complaintId], references: [id])
  updatedBy                 User?     @relation(fields: [updatedById], references: [id])
}

model Feedback {
  id          Int       @id @default(autoincrement())
  rating      Int
  comment     String?
  wasResolved Boolean   @default(true)
  complaintId Int       @unique
  userId      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  complaint   Complaint @relation(fields: [complaintId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@index([rating])
  @@index([createdAt])
}

model User {
  id                   Int            @id @default(autoincrement())
  name                 String
  email                String         @unique
  password             String
  role                 Role           @default(CITIZEN)
  department           String?
  ward                 String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  assignedByComplaints Complaint[]    @relation("AssignedByUser")
  assignedComplaints   Complaint[]    @relation("AssignedComplaints")
  createdComplaints    Complaint[]    @relation("CreatedComplaints")
  feedbacks            Feedback[]
  notifications        Notification[]
  statusUpdates        StatusUpdate[]
}

model DomainCategory {
  id         Int      @id @default(autoincrement())
  domain     String
  category   String
  department String
  createdAt  DateTime @default(now())

  @@unique([domain, category], name: "domain_category_unique")
}

model Notification {
  id          Int        @id @default(autoincrement())
  message     String
  isRead      Boolean    @default(false)
  createdAt   DateTime   @default(now())
  userId      Int
  complaintId Int?
  complaint   Complaint? @relation(fields: [complaintId], references: [id])
  user        User       @relation(fields: [userId], references: [id])
}

enum ComplaintStatus {
  Raised
  Acknowledged
  InProgress
  Resolved
  Closed
}

enum Role {
  CITIZEN
  DEPARTMENT_EMPLOYEE
  DEPARTMENT_ADMIN
  WARD_OFFICER
  CITY_ADMIN
  SUPER_ADMIN
  MAYOR
}
